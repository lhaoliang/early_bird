
.progress-bar {
    width: 631rpx;
    height: 86rpx;
    border-radius: 100rpx;
    background-color: #EBE1DF;
}

.progress-bar-now {
    font-size: 36rpx;
    font-weight: bold;
    color: #FFFFFF;
    font-style: italic;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    height: 100%;
    border-radius: 100rpx;
    text-align: center;
    background: linear-gradient(270deg, rgba(238, 206, 77, 1) 1%, rgba(238, 77, 92, 1) 100%);
}
.progress-bar-now.nobg{
    background: none;
}
.info{
    font-size: 28rpx;
    font-style: normal;
    margin-right: 60rpx;
}