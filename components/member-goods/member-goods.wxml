
    <view class="member-goods" data-id='{{goodsInfoData.id}}' data-goodsid='{{goodsInfoData.goodsId}}' bindtap='toDetail'>
        <image lazy-load="true" mode='widthFix' src="{{imgSrc+goodsInfoData.image}}" />
        <view class="goods-info">
            <view class="goods-title">{{goodsInfoData.title}}</view>
            <view class="goods-price">
                ¥<text class='price'>{{goodsInfoData.memberPrice}}</text> 
                <text class='old'>¥{{goodsInfoData.originalPrice}}</text>
            </view>
            <view class="goods-bottom">
                <view class="member-price">会员专享价</view>
                <button class="buy-now">立即抢购</button>
            </view>
        </view>
    </view>
