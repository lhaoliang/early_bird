/* pages/my/my.wxss */

.top {
    position: relative;
    height: 320rpx;
    width: 678rpx;
    margin: 0 auto;
    display: flex;
}

.top-bg {
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: -1;
}

.top-message {
    width: 32rpx;
    height: 30rpx;
    position: absolute;
    top: 6rpx;
    right: 6rpx;
    padding: 20rpx;
}

.top-avatar {
    width: 156rpx;
    height: 156rpx;
    border-radius: 50%;
    margin: 83rpx 32rpx 0 44rpx;
}

.top-right {
    color: #fff;
}

.top-name {
    font-size: 36rpx;
    margin-top: 82rpx;
}

.top-info {
    font-size: 22rpx;
    margin-top: 18rpx;
    border-radius: 0px;
    padding-left: 0px;
    background-color: inherit;
    color: #fff;

}

.button-hover {
    background-color: inherit;
}

.top-info>image {
    width: 20rpx;
    height: 24rpx;
    vertical-align: -6rpx;
    margin-right: 6rpx;
}

.top-points {
    font-size: 26rpx;
    margin-top: 20rpx;
}

.order {
    padding: 44rpx 36rpx;
}

.order-title {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.order-title>view {
    color: #323333;
    font-size: 36rpx;
    font-weight: bold;
}

.order-title>image {
    width: 30rpx;
    height: 30rpx;
    opacity: 0.7;
}

.order-btns {
    display: flex;
    justify-content: space-between;
    margin-top: 42rpx;
    padding: 0 4rpx;
}

.order-btn {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.order-btn>image {
    width: 54rpx;
    height: 54rpx;
}

.order-btn>view {
    color: #646666;
    font-size: 24rpx;
    margin-top: 10rpx;
}

.line {
    background-color: #f2f7f7;
    height: 10rpx;
}

.btn-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 96rpx;
    border-bottom: 1px solid #f2f7f7;
    padding: 0 34rpx;
}

.item-key {
    font-size: 26rpx;
    color: #333;
}

.item-key>image {
    width: 34rpx;
    height: 34rpx;
    vertical-align: -6rpx;
    margin-right: 8rpx;
}

.item-img {
    width: 30rpx;
    height: 30rpx;
    opacity: 0.7;
}

.new-message {
    width: 14rpx;
    height: 14rpx;
    border-radius: 50%;
    background-color: #ff0000;
    position: absolute;
    top: 26rpx;
    right: 20rpx;
}