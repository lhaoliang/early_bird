/* pages/home/home.wxss */

.container {
    padding: 10rpx 36rpx 36rpx 36rpx;
}
.swiper-container{
    position: relative;
}
.swiper-dots{
    position: absolute;
    top:34rpx;
    right: 26rpx;
    display: flex;
}
.swiper-dot{
    width: 10rpx;
    height: 10rpx;
    border-radius: 50%;
    margin: 0 8rpx;
    background-color: #fff;
    opacity: .3;
}
.swiper-dot.active{
    opacity: 1;
}
.swiper-right{
    position: absolute;
    right: 26rpx;
    bottom: 60rpx;
    width: 26rpx;
    height: 26rpx;
}
.ban-title{
  position: relative;
  bottom: 45rpx;
  color: #fff;
  font-size: 32rpx;
  left: 20rpx;
  font-weight:bold;
}
.ban-change{
    position:relative;
    background:linear-gradient(0deg,rgba(0,0,0,0.1) 0%,rgba(0,0,0,0) 100%);
    bottom: 85rpx;
}
.ban-desc{
  position: relative;
  bottom: 40rpx;
  color: #fff;
  font-size: 24rpx;
  left: 20rpx;
  
}
.home-top-bg {
    width: 678rpx;
    height: 50rpx;
    margin: 34rpx auto 30rpx auto;
    display: block;
}

.line {
    width: 750rpx;
    margin-left: -36rpx;
    height: 0;
    border-bottom: 1px solid #f0f5f5;
}

.card {
    padding-top: 32rpx;
}

.title {
    color: #323333;
    font-size: 48rpx;
    font-weight: bold;
}

.text {
    color: #959999;
    font-size: 28rpx;
    margin-top:6rpx;
}

.goods {
    padding-top: 38rpx;
}

.goods-time {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin: -10rpx 0 16rpx 0;
}

.goods-time>.left {
    display: flex;
    align-items: center;
}

.goods-time>.left>image {
    width: 42rpx;
    height: 42rpx;
}

.goods-time>.left>view {
    color: #323333;
    font-size: 26rpx;
    margin-left: 8rpx;
}

.goods-time>.right {
    display: flex;
    align-items: center;
    font-size: 20rpx;
}

.goods-time>.right>.number {
    color:#fff;
    border-radius:4rpx;
    background-color:#323333;
    margin:0 6rpx;
    width:38rpx;
    height:38rpx;
    box-sizing:border-box;
    text-align:center;
    line-height:38rpx;
}

.goods-time>.right>view:not(.number) {
    color: #323333;
    margin-left: 2rpx;
}

.goods-image {
    width: 100%;
    height: 380rpx;
}

.goods-title {
    color: #323333;
    font-size: 32rpx;
    font-weight: bold;
    margin-top: 10rpx;
}

.goods-info {
    font-size: 26rpx;
    color: #969999;
    margin-top: 12rpx;
}

.goods-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top:14rpx;
}
.goods-bottom>.center{
    flex-grow: 1;
    margin-left: 24rpx;
}
.goods-price {
    font-size: 34rpx;
    color: #1cbdc5;
    font-weight: bold;
    letter-spacing: -1rpx;
}
.delete-line{
    text-decoration: line-through;
}
.goods-price>text {
    font-size: 22rpx;
}

.goods-bottom>.right {
    display: flex;
    align-items: center;
}

.goods-bottom>.right>view {
    color: #646666;
    font-size: 26rpx;
    margin-right: 24rpx;
}

.goods-bottom>.right>button {
    background-color: #ee4d5d;
    height: 60rpx;
    line-height: 60rpx;
    color: #fff;
    font-weight: bold;
    font-size: 24rpx;
    width: 210rpx;
    text-align: center;
    border-radius: 0;
}
