/* pages/questionnaire-survey/questionnaire-survey.wxss */

.newbox {
    width: 678rpx;
    padding-left: 36rpx;
    padding-right: 36rpx;
    background-color: #1bc4c4;
    min-height: 1334rpx;
}

.box-in {
    width: 100%;
    min-height: 1334rpx;
    background: white;
    border-radius: 10rpx;
    padding-bottom: 64rpx;
}

.box_top {
    border-bottom: 4rpx solid rgb(244, 238, 239);
    text-align: center;
    border-radius: 10rpx 10rpx 0 0;
    padding-top: 41rpx;
}

.title {
    font-weight: 400;
    font-size: 34rpx;
    color: rgba(27, 196, 196, 1);
}

.title image {
    width: 23rpx;
    height: 23rpx;
}

.requitnum {
    text-align: center;
    font-size: 28rpx;
    font-weight: 400;
    color: rgba(27, 196, 196, 1);
    margin-top: 23rpx;
    margin-bottom: 32rpx;
}

.topicbox {
    width: 100%;
    padding-top: 37rpx;
    border-bottom: 2rpx dashed rgba(240, 245, 245, 1);
}

.question-title {
    font-size: 36rpx;
    font-weight: 500;
    color: rgba(50, 51, 51, 1);
    margin-left: 55rpx;
    width: 590rpx;
}

.answer-box {
    margin-top: 45rpx;
    width: 558rpx;
    margin-left: 85rpx;
}

.answer-item {
    display: -webkit-flex;
    flex-direction: row;
    margin-bottom: 43rpx;
}

.radius-box {
    width: 16rpx;
    height: 16rpx;
    border-radius: 50%;
    min-width: 16rpx;
    min-height: 16rpx;
    padding: 10rpx;
    border: 1rpx solid gainsboro;
    /* align-items:baseline; */
}

/* 选择后的颜色 */

.radius-color {
    background: rgba(27, 196, 196, 1);
}

/* 内圆 */

.radius-box-in {
    border-radius: 50%;
    background: white;
    width: 100%;
    height: 100%;
    /* border: 0.5rpx solid gainsboro; */
}

.answer-box {
}

.answer-conter {
    font-size: 32rpx;
    color: rgba(50, 51, 51, 1);
    margin-left: 14rpx;
    line-height: 34rpx;
}

/* 提交按钮*/

.sbumitbtn {
    width: 595rpx;
    background: rgba(27, 196, 196, 1);
    margin-left: 42rpx;
    text-align: center;
    line-height: 78rpx;
    font-size: 34rpx;
    color: rgba(255, 255, 255, 1);
    margin-top: 86rpx;
}

.topicbox:last-child {
    border-bottom: none;
}

/* 提交弹窗 */

.tow-box {
    width: 100%;
    height:100%;
    background: rgba(27, 196, 196, 1);
    position: fixed;
    top: 0rpx;
    left: 0rpx;
}

.accomplish {
    width: 244rpx;
    height: 244rpx;
    margin-top: 248rpx;
    margin-left: 253rpx;
}

.subtext {
    font-size: 36rpx;
    font-weight: 500;
    color: rgba(255, 255, 255, 1);
    text-align: center;
    margin-top: 45rpx;
}

.subtext-two {
    font-size: 32rpx;
    font-weight: 400;
    color: rgba(255, 255, 255, 1);
    margin-top: 20rpx;
    text-align: center;
}

.accomplish-btn {
    width: 595rpx;
    height: 100rpx;
    background: rgba(255, 255, 255, 1);
    border-radius: 5rpx;
    font-size: 34rpx;
    font-weight: 400;
    color: rgba(27, 196, 196, 1);
    text-align: center;
    line-height: 100rpx;
    margin-left: 78rpx;
    margin-top: 375rpx;
}
