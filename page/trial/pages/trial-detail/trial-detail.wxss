    text-align:center;
    line-height:40rpx;
    color:#fff;
    float: left;
    position: relative;
    margin-right: 75rpx;
}
.num-sort:last-child{
    margin-right: 0;
}
.num-sort::after{
    position: absolute;
    content: '';
    width: 75rpx;
    height: 1px;
    background-color: #E8EDED;
    top: 50%;
    left: 100%;
}
.num-sort::before{
    position: absolute;
    content: '抢夺名额';
    color: #323232;
    font-size: 22rpx;
    top: 110%;
    left: -70%;
    width: 100rpx;
}
.num-sort:nth-child(2)::before{
    content: '购买下单'
}
.num-sort:nth-child(3)::before{
    content: '商家发货'
}
.num-sort:nth-child(4)::before{
    content: '试用体验'
}
.num-sort:nth-child(5)::before{
    content: '提交报告'
}
.num-sort:nth-child(6)::before{
    content: '返还金额'
}
.num-sort:last-child::after{
    display: none;
}
