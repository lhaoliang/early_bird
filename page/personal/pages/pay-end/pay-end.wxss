/* pages/pay-end/pay-end.wxss */
.person-info {
    padding: 30rpx 37rpx 0;
}

.person-info>image {
    width: 100%;
    height: 210rpx;
    display: block;
}

.inner {
    position: absolute;
    top: 110rpx;
    left: 65rpx;
}

.person,
.address {
    display: flex;
    justify-content: space-between;
    color: #fff;
    width: 580rpx;
    align-items: center;
}

.person {
    font-size: 28rpx;
    width: 520rpx;
    margin: 0 auto 30rpx;
}

.address {
    font-size: 24rpx;
    width: 620rpx;
}

.address>image {
    position: absolute;
    width: 54rpx;
    height: 36rpx;
    margin-left: 12rpx;
}
.icon-right>image {
    width: 26rpx;
    height: 26rpx;
    margin-right: 8rpx;
    vertical-align: middle;
}
.add-info{
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}
.add-info>image {
    width: 22rpx;
    height: 26rpx;
    vertical-align: middle;
    margin-right: 27rpx;
}
.good-detail{
    padding: 36rpx;
    border-bottom: 10rpx solid #F0F5F5;
}
.title{
    font-size: 28rpx;
    color: #323333;
    font-weight: bold;
    margin-bottom: 20rpx;
}
.goods-options {
    border-bottom: 10rpx solid #f0f5f5;
}
.marbot{
    margin-bottom: 264rpx;
}
.goods-option {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 36rpx;
    height: 92rpx;
    font-size: 22rpx;
}

.goods-option:not(:last-of-type) {
    border-bottom: 1px solid #f0f5f5;
}

.option-key {
    color: #969999;
}

.option-value {
    color: #646666;
}
.option-color{
    color: #EE4D5D;
}
.foot{
    padding: 36rpx;
    background-color: #fff;
    z-index: 22;
    position: fixed;
    bottom: 0;
    width: 100%;
    box-sizing: border-box;
}
.pay-money{
    display: flex;
    justify-content: space-between;
    font-size: 24rpx;
    margin-bottom: 50rpx;
}
.pay-time{
    color: #646666;
    font-size: 24rpx;
}
.end{
    color: #323333;
    font-size: 24rpx;
}
.pay-btn{
    width: 100%;
    left: 4%;
    color: #fff;
    font-size: 32rpx;
    text-align: center;
    height: 100rpx;
    line-height: 100rpx;
    background-color: #1CBDC5;
    border-radius: 5rpx;
}
.address-car {
    display: flex;
    align-items: center;
    justify-content: center;
    color: #1cbdc5;
    font-size: 28rpx;
    border: dashed 2rpx #1cbdc5;
    width: 678rpx;
    height: 210rpx;
    margin: 0 auto;
    border-radius: 10rpx;
}

.address-car>image {
    width: 54rpx;
    height: 36rpx;
    margin-left: 12rpx;
} 